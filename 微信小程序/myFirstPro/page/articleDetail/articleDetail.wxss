page{
 
}
image{
    opacity:0.2;
}
.container{

}
.title{
    padding:20rpx 5rpx;    
}
.title text{
    font-size:50rpx;
}
.authorInfo{
    padding:10rpx 5rpx;
    font-size:35rpx;
    color:rgb(70, 69, 69);
}
.media image{
    width:740rpx;
    padding:5rpx;
}
.contentInfo{
    padding:5rpx;
