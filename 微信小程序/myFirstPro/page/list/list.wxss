/* page/list/list.wxss */
@import "../commenlist.wxss";
.contanier{
    background:#ddd;   
    padding:0 25rpx;
}
.recommend-container{
    padding:0 25rpx;
    background:#fff;
}
.recommend-article{
    display: flex;
    flex-direction:column;
    align-items:center;
}
.data{
    font-size:52rpx;
    letter-spacing:10rpx;
}
.data::after{
    content:'';
    width:180rpx;
    height:4rpx;
    background:#eee;
    display:block;
    margin:10rpx auto;
} 
.recommend-title{
    margin-top:30rpx;
    font-size:30rpx;
    text-align:center;
}
.recommend-cover{
    margin-top:30rpx;
    width:700rpx;
}
.recommend-box{

}
.recommend-box text{
    border:solid #ddd 1px;
    display: inline-block;
    padding:10rpx 20rpx;
    font-size:20rpx;
    margin:20rpx 20rpx 20rpx 0;
}
.recommend-box text:first-of-type{
    background:#000;
    color:#fff;
}





