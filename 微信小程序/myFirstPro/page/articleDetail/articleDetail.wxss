/* page/articleDetail/articleDetail.wxss */
page{
 opacity: 0.2;
}
image{
    opacity:0.3;
}
.container{

}
.title{
    padding:20rpx 5rpx;    
}
.title text{
    font-size:50rpx;
}
.authorInfo{
    padding:10rpx 5rpx;
    font-size:35rpx;
    color:rgb(70, 69, 69);
}
.media image{
    width:740rpx;
    padding:5rpx;
}
.contentInfo{
    padding:5rpx;
    font-size:30rpx;
    color:rgb(22, 22, 22);
    text-indent:2em;
} 
.readingNum{
    float:right;
    margin-right:10rpx;
}
.media{
    display: flex;
    justify-content:center;
}
.media video{
    width:700rpx;
    height:500rpx;
}
.controlsPic{
    width:700rpx;
    height:500rpx;
    background:red;
    position: relative;
    opacity: 0.1;
}

.controlsBox{
    position: absolute;
    top:calc(50% - 50rpx);
    left:calc(50% - 50rpx);
    width:100rpx;
    height:100rpx;
    border:solid red 1px;
    border-radius:50%;
    font-size:20rpx;
    color:#ccc;
    display: flex;
    flex-direction:column;
    align-items: center;
    justify-content:center;
}
.controlsBox-img{
    width:50rpx;
    height:50rpx;
}
.audioContanier{
    display: flex;
    padding:30rpx 0rpx;
    justify-content:space-between;
    width:550rpx;
    padding:0rpx 75rpx;
}
.audioPlayBtn view{
    width:70rpx;
    height:70rpx;
    border:solid green 4rpx;
    border-radius:50%;
    display: flex;
    align-items:center;
    justify-content:center;
    margin-top:30rpx;
}
.audioPlayBtn view::after{
    content:'';
    display: block;
    border:solid green 1px;
    border-width:25rpx;
    border-right-width:0rpx;
    border-top-color:transparent;
    border-bottom-color:transparent;
    width:0rpx;
    height:0rpx;
    margin-right:-10rpx;
}
.durationBox{
    display:flex;
    justify-content:space-between;
    font-size:20rpx;
    color:#999;
    padding:10rpx 0rpx;
}
.fromTitle{
    font-size:28rpx;
    color:#999;
}
.progressBox{
    position:relative;
    padding:10rpx 0rpx;
}
.progressBox view{
    width:20rpx;
    height:20rpx;
    background:red;
    border-radius:50%;
    position:absolute;
    top:3rpx;
    left:-2rpx;
}
.paused::after{
    border-top-color:green!important;
    border-bottom-color:green!important;
    margin-left:-10rpx;

}

swiper{
    width:750rpx;
}