/* components/loading/cmp.wxss */
.container{
    position: relative;
    width:60rpx;
    height:60rpx;
    margin:0 auto;
}
.circle{
    width:100%;
    height:100%;
    background-color:#666;
    border-radius:50%;
    position:absolute;
    top:0;
    left:0;
    animation:run 2s infinite;
}
.circle1{
    animation-delay:-1s;    background-color:#333;
}

@keyframes run{
    0%{
        transform:scale(0);
    }
    50%{
        transform:scale(1);
    }
    100%{
        transform:scale(0);
    }
}

