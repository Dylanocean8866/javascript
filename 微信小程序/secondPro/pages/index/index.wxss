/* pages/index/index.wxss */
page{
    opacity:0.2;
}
.container{
    background-color:rgba(0,0,0,.6);
    padding-top:20rpx;

}
.scrollContainer{
    height:200rpx;
}

.color{
    width:200rpx;
    height:200rpx;
}
.red{
    background-color:red;
}
.green{
    background-color:green;
}
.blue{
    background-color:blue;
}

.add{
    margin-left:10rpx;
}
.to-catalog{
    display: inline-block;
    border:1px solid #000;
    padding:10rpx 20rpx;
    color:#000;
    background-color:#fff; 
    font-size:20rpx;
    font-weight:bold;
    letter-spacing:1rpx;
}   
.nav{
    position:fixed;
    top:0;
    left:0;
    z-index:99;
}
.recom{
    margin-top:90rpx;
    display:block;
}
.container-loading{
    width:750rpx;
    height:1344rpx;
    background-color:#fff;
    position: relative;
}
.loading{
    display: block;
    position: absolute;
    top:calc(50% - 40rpx);
    left:calc(50% - 40rpx);
}