
/*文章*/

.recommend-list{
    background:#fff;
}
.re-head{
    display: flex;
    color:rgb(117, 114, 114);
    font-size:35rpx;
    margin-top:30rpx;
}
.re-head text{
    margin-top:20rpx;
}
.logo-img{
    width:50rpx;
    height:50rpx;
    margin-top:20rpx;
    margin-left:20rpx;
}
.list-img{
    width:700rpx;
    margin-top:30rpx;
}
.re-title{
    padding:0 20rpx;
    font-size:34rpx;
}
.re-footer{
    display: flex;
    justify-content:space-between;  
    margin-top:20rpx;
    padding-bottom:20rpx;
}
.re-footer:last-of-type{
    margin-bottom:0rpx;
}
.left-re-footer{
    border:solid #000 1rpx;
    line-height:40rpx;
    margin-left:20rpx;
    padding:10rpx 10rpx;
}
.pot{
    width:40rpx;
    height:40rpx;
    vertical-align: middle;
}
.right-re-footer{
    display: flex;   
    flex-direction: row;
}
.right-re-footer view{
    border:solid #eee 1rpx;
    margin-right:10rpx;
    width:40rpx;
    height:60rpx;
    position: relative;
}
.btnShare{
    width:40rpx;
    height:60rpx;
}
.btnShare image{
    position: absolute;
    top:12rpx;
    left:0px;
}
 
.btnShare::after{
    border:none;
}
